    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_wifi_list">

    <fragment
        android:id="@+id/navigation_wifi_list"
        android:name="com.nstu.geolocationwificlient.ui.wifilist.WifiListFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_wifi_list" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.nstu.geolocationwificlient.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.nstu.geolocationwificlient.ui.notifications.NotificationsFragment"
